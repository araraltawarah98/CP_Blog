<div class="container">
  <%= form_for(@blog_item) do |f| %>
    <div class="field">
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %>
    </div>
    <br>
    <div class="field">
      <%= f.label :description %>
      <br>
      <%= f.text_area :description, rows: "10", style: "width:100%" %>
    </div>
    <div class="field">
      <%= f.label :Tag %>
      <%= f.fields_for :tags do |tags_fields| %>
        <%= tags_fields.text_field :name %>
      <% end %>
    </div>
    <div class="actions">
      <%= f.submit "Create a blog", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
